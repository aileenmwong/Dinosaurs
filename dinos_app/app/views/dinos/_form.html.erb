<%= form_for(@dino) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_area :color %>
  </div>
  <div class="field">
    <%= f.label :breed %><br>
    <%= f.text_area :breed %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
